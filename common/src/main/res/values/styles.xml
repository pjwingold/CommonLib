<resources>

    <!-- Base application theme. -->
    <style name="CommonTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="primaryColor">@color/colorPrimary</item>
    </style>

    <style name="CommonTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MatchHeightLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContentLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PageContainer" parent="MatchParentLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SectionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SectionScroll" parent="MatchParentLayout">
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="ProgressBarInline" parent="@style/Base.Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:progressDrawable">@drawable/progress_bar_inline</item>
    </style>

    <style name="Control" parent="WrapContentLayout" />

    <style name="Control.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:padding">@dimen/content_spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/content_spacing</item>
        <item name="android:layout_marginTop">@dimen/content_spacing_small</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>
</resources>
