<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header" parent="WrapContentLayout">
        <item name="android:paddingBottom">@dimen/content_spacing_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header.H1">
        <item name="android:textSize">@dimen/header1_text</item>
    </style>

    <style name="Header.H5">
        <item name="android:textSize">@dimen/header5_text</item>
    </style>

    <style name="Header.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:displayOptions">showHome|homeAsUp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text" parent="WrapContentLayout">
        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra</item>
    </style>

    <style name="Text.Body">
        <item name="android:paddingBottom">@dimen/content_spacing</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <style name="TextAppearance.Bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>